                    <ophirah_qquoteadv>
                        <class>qquoteadv/observer</class>
                        <method>catchFatalError</method>
                    </ophirah_qquoteadv>
                    <ophirah_qquoteadv_prevent_cache>
                        <class>qquoteadv/pagecache</class>
