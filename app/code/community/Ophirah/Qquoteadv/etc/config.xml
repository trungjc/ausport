<config>
    <modules>
        <Ophirah_Qquoteadv>
            <version>5.1.2</version>
        </Ophirah_Qquoteadv>
    </modules>
    <global>
        <models>
            <qquoteadv>
                <class>Ophirah_Qquoteadv_Model</class>
                <resourceModel>qquoteadv_mysql4</resourceModel>
            </qquoteadv>
            <!-- OPTIONAL: Enable to make the no-merge option available, also uncomment no_product_merge in system.xml -->
            <!--<sales>
                <rewrite>
                    <quote>Ophirah_Qquoteadv_Model_Override_Mage_Sales_Model_Quote</quote>
                </rewrite>
            </sales>-->
            <qquoteadv_mysql4>
                <class>Ophirah_Qquoteadv_Model_Mysql4</class>
                <entities>
                    <address>
                        <table>quoteadv_quote_address</table>
                    </address>
                    <quoteaddress>
                        <table>quoteadv_quote_address</table>
                    </quoteaddress>
                    <quoteshippingrate>
                        <table>quoteadv_shipping_rate</table>
                    </quoteshippingrate>
                    <qqadvcustomer>
                        <table>quoteadv_customer</table>
                    </qqadvcustomer>
                    <qqadvproduct>
                        <table>quoteadv_product</table>
                    </qqadvproduct>
                    <qqadvrotation>
                        <table>quoteadv_rotation</table>
                    </qqadvrotation>
                    <requestitem>
                        <table>quoteadv_request_item</table>
                    </requestitem>
                    <shippingrate>
                        <table>quoteadv_shipping_rate</table>
                    </shippingrate>
                    <product_attribute_group_allow>
                        <table>quoteadv_group_allow</table>
                    </product_attribute_group_allow>
                    <extraoptions>
                        <table>quoteadv_extraoptions</table>
                    </extraoptions>
                    <qqadvlogadmin>
                        <table>quoteadv_log_admin</table>
                    </qqadvlogadmin>
                    <quotetrail>
                        <table>quoteadv_audit_trail</table>
                    </quotetrail>
                    <product_attribute_tier_cost>
                        <table>quoteadv_tier_cost</table>
                    </product_attribute_tier_cost>
                    <tiercost>
                        <table>quoteadv_tier_cost</table>
                    </tiercost>
                    <qqadvproductdownloadable>
                        <table>quoteadv_product_downloadable</table>
                    </qqadvproductdownloadable>
                </entities>
            </qquoteadv_mysql4>
            <qquoteshiprate>
                <class>Ophirah_Qquoteadv_Model</class>
            </qquoteshiprate>
        </models>
        <resources>
            <qquoteadv_setup>
                <setup>
                    <module>Ophirah_Qquoteadv</module>
                    <class>Ophirah_Qquoteadv_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </qquoteadv_setup>
            <qquoteadv_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </qquoteadv_write>
            <qquoteadv_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </qquoteadv_read>
        </resources>
        <blocks>
            <qquoteadv>
                <class>Ophirah_Qquoteadv_Block</class>
            </qquoteadv>
            <checkout>
                <rewrite>
                    <onepage_shipping_method_available>Ophirah_Qquoteadv_Block_Checkout_Onepage_Shipping_Method_Available</onepage_shipping_method_available>
                </rewrite>
            </checkout>
            <!-- C2Quote Customer -->
            <adminhtml>
                <rewrite>
                    <customer_edit_tabs>Ophirah_Qquoteadv_Block_Adminhtml_Customer_Edit_Tabs</customer_edit_tabs>
