    <sections>
        <qquoteadv_sales_representatives>
            <label>Sales Representatives</label>
            <tab>qquoteadv</tab>
            <sort_order>60</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messaging>
                    <label>Messaging</label>
                    <comment><![CDATA[
                        <div class="box">
                        <p><b>CRM Add-on for Cart2Quote (Version 1.0.2) Provided by <a target="_blank" href="http://www.ophirah.nl">Ophirah | E-commerce Projects</a></b></p>
                        Check out the<a target="_blank" href="https://www.youtube.com/watch?v=nxHaNu8MKUU">Explainer Video</a><br>
                        For documentation and support visit<a target="_blank" href="http://cart2quote.zendesk.com">cart2quote.zendesk.com</a> or contact<a target="_blank" href="mailto:support@cart2quote.com">support@cart2quote.com</a><br><br>
                        Cart2Quote Enterprise license and higher required. (<a target='_blank' href='http://www.cart2quote.com/magento-cart2quote-upgrade.html?utm_source=Client_Website&utm_medium=ConfigurationPanel&utm_campaign=Messaging'>Upgrade</a>)
                        </div>
                    ]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled>
                            <label>Enable CRM</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable / disable Cart2Quote CRM add-on extension.</comment>
                            <tooltip><![CDATA[<input type="hidden" value="204202909" class="article_id"/>]]></tooltip>
                            <frontend_model>qquoteadv/adminhtml_system_config_form_tooltipfield</frontend_model>
                        </enabled>
                        <enabled_customer>
                            <label>Allow the customer to respond in the frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_customer>
                        <crmaddon_container>
                            <label>CRM Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>crmaddon/system_config_source_email_templatedisable</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select email container for CRM.</comment>
                            <tooltip><![CDATA[<input type="hidden" value="204878525" class="article_id"/>]]></tooltip>
                            <frontend_model>qquoteadv/adminhtml_system_config_form_tooltipfield</frontend_model>
                        </crmaddon_container>
                        <crmaddon_container_admin>
                            <label>CRM Email Template for admin notice</label>
                            <frontend_type>select</frontend_type>
                            <source_model>crmaddon/system_config_source_email_templatedisable</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select email container for CRM admin notice.</comment>
                        </crmaddon_container_admin>
