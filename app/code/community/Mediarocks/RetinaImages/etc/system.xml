<config>
    <tabs>
        <mediarocks translate="label" module="mediarocks_retinaimages">
            <label>Media Rocks Extensions</label>
            <sort_order>100</sort_order>
        </mediarocks>
    </tabs>
    <sections>
        <retinaimages translate="label" module="mediarocks_retinaimages">
            <label>Retina Images</label>
            <tab>mediarocks</tab>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<module translate="label comment">
            		<label>Settings</label>
            		<sort_order>0</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>1</show_in_store>            		
            		<fields>
            			<enabled translate="label comment">
            				<label>Enable Module?</label>
            				<comment>Selecting Yes will enable the module for the current scope.</comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
            				<sort_order>1</sort_order>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</enabled>
            			<quality translate="label comment">
            				<label>Retina Image Quality</label>
            				<comment>
                            <![CDATA[
                                Here you can set the compression level for the retina images. Enter a value between 1 (lowest) and 100 (best). Defaults to 60 if left empty.<br/>
                                <strong style="color:red;">NOTE: If you change this value, you have to flush your catalog images cache in "System" -> "Cache Store Management" -> "Additional Cache Management" to see the changes.</strong><br/>
                            ]]>
                            </comment>
							<frontend_type>text</frontend_type>
            				<sort_order>2</sort_order>
                            <validate>validate-digits validate-greater-than-zero</validate>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</quality>
            			<default_quality translate="label comment">
            				<label>Default Image Quality</label>
            				<comment>
                            <![CDATA[
                                Same as above but for the non-retina images. Defaults to 90 if left empty.
                            ]]>
                            </comment>
							<frontend_type>text</frontend_type>
            				<sort_order>3</sort_order>
                            <validate>validate-digits validate-greater-than-zero</validate>
            				<show_in_default>1</show_in_default>
            				<show_in_website>1</show_in_website>
            				<show_in_store>1</show_in_store>
            			</default_quality>
            		</fields>            	
            	</module>
            </groups>
        </retinaimages>
    </sections>
</config>