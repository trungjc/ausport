<config>
    <modules>
        <Mediarocks_RetinaImages>
            <version>0.1.3</version>
        </Mediarocks_RetinaImages>
    </modules>
	<frontend>
        <layout>
            <updates>
                <mediarocks_retinaimages>
                    <file>mediarocks_retinaimages.xml</file>
                </mediarocks_retinaimages>
            </updates>
        </layout>
	</frontend>
    <global>
        <models>
            <mediarocks_retinaimages>
                <class>Mediarocks_RetinaImages_Model</class>
            </mediarocks_retinaimages>
            <catalog>
                <rewrite>
                    <product_image>Mediarocks_RetinaImages_Model_Product_Image</product_image>
                </rewrite>
            </catalog>
        </models>
        <helpers>
            <mediarocks_retinaimages>
                <class>Mediarocks_RetinaImages_Helper</class>
            </mediarocks_retinaimages>
        </helpers>
    </global>
    
    <default>
        <retinaimages>
            <module>
                <enabled>1</enabled>
                <quality>60</quality>
                <default_quality>90</default_quality>
            </module>
       	</retinaimages>
    </default>
    
</config>
