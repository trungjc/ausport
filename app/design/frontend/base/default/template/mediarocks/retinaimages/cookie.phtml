if (!Mage::getStoreConfig('retinaimages/module/enabled')) {
	return;
}

if ($device_pixel_ratio = Mage::getModel('core/cookie')->get('device_pixel_ratio')) {
	Mage::register('is_retina', ($device_pixel_ratio >= 2));
}
else {
?>
<script type="text/javascript">
(function(){
  	if (document.cookie.indexOf('device_pixel_ratio') == -1 && 'devicePixelRatio' in window && window.devicePixelRatio == 2) {
    	
    	// set retina cookie
    	Mage.Cookies.set('device_pixel_ratio', window.devicePixelRatio);
    	
    	// reload the page so php can check the cookie and provide retina images
    	Mage.Cookies.get('device_pixel_ratio') == 2 && window.location.reload();
  	}
})();
</script>
<?php } ?>
