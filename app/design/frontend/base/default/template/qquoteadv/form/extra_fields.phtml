$extraFieldsCount = Mage::helper('qquoteadv')->getNumberOfExtraFields();
    if($this->extraFieldsAreAvailable()) {
        for($fieldNumber = 1; $fieldNumber <= $extraFieldsCount; $fieldNumber++) {
            if($this->isExtraFieldSet($fieldNumber)) {
                echo $this->getRowStart($fieldNumber);
                ?>
                <td class="<?php echo $this->getRowClass($fieldNumber); ?>">
                    <label>
                        <?php
                        echo $this->getFieldLabel($fieldNumber);
                        if ($this->isRequiredField($fieldNumber)) {
                            echo '<span class="required"></span>';
                        }
                        ?>
                        <br/>
                    </label>
                    <input type='text'
                           name='customer[extra_field_<?php echo $fieldNumber; ?>]'
                           id='customer:extra_field_<?php echo $fieldNumber; ?>'
                           class="
                       <?php
                           if ($this->isRequiredField($fieldNumber)) {
                               echo "required-entry";
                           }
                           ?>
                       input-text"/>
                </td>
                <?php
                echo $this->getRowEnd($fieldNumber);
            }
        }
    }
