                <template>qquoteadv/catalog/product/list.phtml</template>
            </action>
        </reference>
    </catalog_category_layered>
    <catalog_category_default>
        <reference name="head">
            <action ifconfig="qquoteadv_quote_frontend/catalog/layout_update_listgrid_activated" method="addItem">
