<div class="add-to-cart">
    <?php $_product = $this->getProduct(); ?>
    <?php $buttonTitle = $this->__('Update Quote'); ?>
    <?php if (Mage::helper('qquoteadv')->isEnabled()): ?>
        <?php if ($_product->getData('allowed_to_quotemode') == 1): ?>
            <span style="float: left; padding-right: 2px;">&nbsp;</span>

            <?php if (!$_product->isGrouped()): ?>
                <label for="qty"><?php echo Mage::helper('catalog')->__('Qty:') ?></label>
                <input type="text" name="qty" id="qty" maxlength="12"
                       value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo Mage::helper('catalog')->__('Qty') ?>"
                       class="input-text qty"/>
            <?php endif; ?>
            <?php $actionQuote = "productAddToCartForm.submit(this)"; ?>
            <button type="button" title="<?php echo $this->__("Update Quote"); ?>" class="button btn-cart"
                    onclick="<?php echo $actionQuote; ?>">
                <span><span><?php echo $this->__("Update Quote"); ?></span></span></button>

        <?php endif; ?>
    <?php endif; ?>
</div>